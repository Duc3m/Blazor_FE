@page "/order-detail/3"
@using System.Globalization

@if (orderDetail != null)
{
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Chi tiết đơn hàng</h1>
        <p class="text-sm text-gray-500">Đơn hàng #@OrderId đặt ngày @orderDetail.OrderDate.ToString("MMMM dd, yyyy")</p>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Left Column: Order Items -->
        <div class="w-full lg:w-2/3">
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <h2 class="text-xl font-semibold text-gray-700 p-4 border-b">Số lượng sản phẩm (@orderDetail.Items.Count)</h2>
                <div class="overflow-y-auto h-[30rem]">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0 z-10">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tên sản phẩm</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Số lượng</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá</th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var item in orderDetail.Items)
                            {
                                <OrderDetailsItem Item="item" />
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column: Summary & Customer Info -->
        <div class="w-full lg:w-1/3 flex flex-col gap-8">
            <!-- Order Summary -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-4">Order Summary</h3>
                <div class="space-y-3 text-gray-600">
                    <div class="flex justify-between">
                        <span>Subtotal</span>
                        <span class="font-medium text-gray-900">@orderDetail.Subtotal.ToString("C")</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Shipping</span>
                        <span class="font-medium text-gray-900">@orderDetail.Shipping.ToString("C")</span>
                    </div>
                    <div class="flex justify-between font-bold text-lg text-gray-900 border-t pt-3">
                        <span>Total</span>
                        <span>@orderDetail.TotalAmount.ToString("C")</span>
                    </div>
                </div>
            </div>

            <!-- Customer Information -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-4">Customer Information</h3>
                <div class="space-y-3 text-gray-600">
                    <p><strong class="font-medium text-gray-800">Name:</strong> @orderDetail.Customer.Name</p>
                    <p><strong class="font-medium text-gray-800">Phone:</strong> @orderDetail.Customer.Phone</p>
                    <p><strong class="font-medium text-gray-800">Email:</strong> @orderDetail.Customer.Email</p>
                    <p><strong class="font-medium text-gray-800">Address:</strong> @orderDetail.Customer.Address</p>
                </div>
            </div>
        </div>
    </div>

    <NavLink href="/orders" class="mt-4 inline-flex items-center rounded-md bg-green-600 px-4 py-2 text-white hover:bg-green-700">
        Danh sách đơn hàng
    </NavLink>
}
else
{
    <p class="text-center text-gray-500">Loading order details...</p>
}


