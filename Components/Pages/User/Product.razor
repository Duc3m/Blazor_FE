@page "/product"
@inject IProductService ProductService
@inject ICategoryService CategoryService

<div class="grid grid-cols-1 lg:grid-cols-5">
    @* <div class="d-grid lg:col-span-1"></div>
    <div class="d-grid lg:col-span-4">
        
    </div> *@

    <ProductFilter OnFilterApply="OnFilterApply" OnResetFilter="OnResetFilter"/>

    @if(products == null)
    {
        <Progress Color="Color.Success" Class="bg-sky-50 *:bg-blue-500 lg:col-span-4" Indeterminate />
    }
    else if (products.Count == 0)
    {
        <div class="flex-column items-center justify-center lg:col-span-4 mt-4">
            <h3 class="text-gray-500 text-center text-lg">Không tìm thấy sản phẩm nào.</h3>
        </div>
    }
    else
    {
        <div class="flex-column items-center justify-center lg:col-span-4 mt-4">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            @foreach(var product in products)
            {
                <ProductCard Product="@product" ClickEvent="OnProductClicked"/>
            }
            </div>

            <DynamicPagination Count="@totalPages" Selected="@currentPage" OnPageChanged="OnPageChanged" />
        </div>
    }
</div>

<Modal @ref="modalRef"
       CloseOnBackdrop="true">
    <ModalContent Centered
                  Size="ModalSize.Large">
        <ProductDetail @bind-productModel="productModel"
                       OnCloseRequest="@(()=>HideModal())"/>
    </ModalContent>
</Modal>

@code {
    public List<ProductModel>? products;
    public int totalPages;
    public int pageSize = 12;
    private int currentPage = 1;
    private ProductModel productModel = new ProductModel();
    private Modal modalRef;
    private ProductFilterRequest currentFilterRequest = new ProductFilterRequest();

    private Dictionary<int, string> categoryLookup = new Dictionary<int, string>();

    protected override async Task OnInitializedAsync()
    {
        var categories = await CategoryService.GetCategoriesAsync();
        if(categories != null)
        {
            categoryLookup = categories.Content.ToDictionary(c => c.CategoryId, c => c.CategoryName);
        }
        await LoadData(1);
    }

    private async Task LoadData(int page)
    {   

        var response = await ProductService.FilterProductAsync(currentFilterRequest, page, pageSize);
        if (response != null)
        {
            products = response.Content;

            foreach(var product in products)
            {
                if(categoryLookup.TryGetValue(product.CategoryId, out var categoryName))
                {
                    product.CategoryName = categoryName;
                }
            }

            totalPages = response.Metadata.TotalPages;
        }
    }

    public async Task OnPageChanged(int page)
    {
        currentPage = page;
        await LoadData(page);
    }

    public async Task OnProductClicked(ProductModel product)
    {
        productModel = product;
        ShowModal();
    }

    public async Task OnFilterApply(ProductFilterRequest filterRequest)
    {
        // if(selectedCategoryIds == null || !selectedCategoryIds.Any())
        // {
        //     currentFilterRequest.CategoryIds = null;
        // }
        // else
        // {
        //     currentFilterRequest.CategoryIds = selectedCategoryIds;
        // }
        if(filterRequest != null)
        {
            currentFilterRequest = filterRequest;
        }
        currentPage = 1;
        await LoadData(currentPage);
    }

    public async Task OnResetFilter()
    {
        currentFilterRequest = new ProductFilterRequest();
        currentPage = 1;
        await LoadData(currentPage);
    }

    private Task ShowModal()
    {
        return modalRef.Show();
    }

    private Task HideModal()
    {
        return modalRef.Hide();
    }

}